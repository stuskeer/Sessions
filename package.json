{
  "name": "session-tracker",
  "version": "1.0.0",
  "description": "Session tracker for kitesurf sessions",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "electron": "electron .",
    "electron-dev": "nodemon --watch index.js --watch electron-main.js --exec electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.stuartskeer.sessiontracker",
    "productName": "Session Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "index.js",
      "controllers/**/*",
      "models/**/*",
      "services/**/*",
      "views/**/*",
      "frontend/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": ["dmg", "zip"],
      "icon": "frontend/images/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "frontend/images/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "frontend/images/icon.png"
    }
  },
  "keywords": [],
  "author": "Stuart Skeer",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11"
  }
}
